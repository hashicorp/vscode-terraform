{
  "icon": "terraform.png",
  "name": "terraform",
  "displayName": "Terraform",
  "description": "Syntax highlighting and autocompletion for Terraform",
  "version": "2.0.0",
  "publisher": "hashicorp",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Formatters",
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hashicorp/terraform-vscode-extension.git"
  },
  "activationEvents": [
    "onLanguage:terraform",
    "onView:terraform-modules",
    "workspaceContains:**/*.tf",
    "onCommand:terraform.toggleLanguageServer"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "terraform",
        "aliases": [
          "Terraform",
          "terraform"
        ],
        "extensions": [
          ".tf",
          ".tfvars"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "json",
        "extensions": [
          ".tfstate"
        ]
      }
    ],
    "grammars": [
      {
        "language": "terraform",
        "scopeName": "scope.terraform",
        "path": "./syntaxes/terraform.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "terraform",
        "path": "./snippets/terraform.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Terraform",
      "properties": {
        "terraform.languageServer.external": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Whether an external language server binary should be launched."
        },
        "terraform.languageServer.pathToBinary": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to language server binary (optional)"
        },
        "terraform.languageServer.args": {
          "scope": "resource",
          "type": "array",
          "default": [
            "serve"
          ],
          "description": "Arguments to pass to language server binary"
        },
        "terraform.languageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "terraform.languageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "terraform.fmtOnSave": {
          "scope": "resource",
          "type": "boolean",
          "default": false
        }
      }
    },
    "commands": [
      {
        "command": "terraform.installLanguageServer",
        "title": "Terraform: Install/Update Language Server"
      },
      {
        "command": "terraform.toggleLanguageServer",
        "title": "Terraform: Enable/Disable Language Server"
      },
      {
        "command": "terraform.init",
        "title": "Terraform: Init"
      },
      {
        "command": "terraform.plan",
        "title": "Terraform: Plan"
      },
      {
        "command": "terraform.validate",
        "title": "Terraform: Validate"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run update-vscode && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "update-vscode": "vscode-install",
    "postinstall": "vscode-install",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "@octokit/rest": "^17.1.3",
    "@types/semver": "^7.1.0",
    "semver": "^7.1.3",
    "vscode-languageclient": "^5.2.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/yauzl": "^2.9.1",
    "tslint": "^5.16.0",
    "typescript": "^3.6.4",
    "vscode": "^1.1.35"
  }
}
