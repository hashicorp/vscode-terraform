{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker", "DOM", "DOM.Iterable"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node16",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    ".vscode-test-web",
    ".test-storage",
    ".test-extensions"
  ]
}
