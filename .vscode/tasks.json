{
  "version": "2.0.0",
  "tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch:tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
    {
      "type": "process",
      "label": "terraformInit",
			"isBackground": true,
      "command": "terraform",
      "args": ["init"],
      "options": {
        "cwd": "${workspaceFolder}/testFixture"
      },
      "presentation": {
				"reveal": "never",
				"group": "watchers"
      },
			"group": "build",
    },
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch:tests",
        "terraformInit"
			],
			"problemMatcher": []
		}
  ]
}
